@model CoreDemo.Controllers.EmployeeClass
@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<h1>Api ile personel güncelleme sayfası</h1>
<form method="post">
    <label>Id</label>
    @Html.TextBoxFor(x=>x.Id,  new {@class="form-control"})
    <br />
    <label>Name</label>
    @Html.TextBoxFor(x=>x.Name,  new {@class="form-control"})
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
</form>

@section scripts{}
