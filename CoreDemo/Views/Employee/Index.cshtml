@using CoreDemo.Controllers
@model List<EmployeeClass>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Adı Soyadı</td>
        <td>Düzenle</td>
        <td>Sil</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Employee/EditEmployee/@item.Id" class="btn btn-outline-success">Düzenle</a></td>
            <td><a href="/Employee/DeleteEmployee/@item.Id" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Employee/AddEmployee" class="btn btn-outline-primary">Yeni Çalışan Ekle</a>

@section scripts
    {

}
